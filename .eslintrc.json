{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 2,
        "no-unused-vars": [
            "error", 
            { 
                "vars": "all", 
                "args": "after-used" 
            }
        ],
        "no-undefined": "error",
        "no-undef": "error",
        "eqeqeq": "error",
        "no-var": "error"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "plugins": [ 
        "react"
    ],
    "extends": [
        "plugin:react/recommended"
    ]
}